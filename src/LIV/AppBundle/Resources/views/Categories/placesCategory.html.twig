{% extends '@LIVApp/Default/layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row placesPresentation">
            <div class="col s12 m12">
                {% for place in category.places %}
                    <div class="col s6 m4">
                        <div class="card">
                            <div class="card-image">
                                <img src="{{ asset('img/background2.jpg') }}">
                                <span class="card-title">{{ place.name }}</span>
                            </div>
                            <div class="card-content">
                                <p>
                                    {{ place.shortDescription }}
                                </p>
                            </div>
                            <div class="card-action">
                                <a href="#">This is a link</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}