{% trans_default_domain 'FOSUserBundle' %}
{% extends "LIVUserBundle::layout.html.twig" %}

{% block description %}Page de Connexion{% endblock %}

{% block title %}Liv Lyon - Connexion{% endblock %}

{% block fos_user_content %}


    <blockquote>
        Merci de vous authentifier
    </blockquote>
    <div id="loginbox" class="col s10 m4">
        <form action="{{ path('fos_user_security_check') }}" method="post" class="login">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" /><br>
            <br>
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" id="password" name="_password" required="required" /><br>
            <br>

            <label for="remember_me">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <span >{{ 'security.login.remember_me'|trans }}</span>
            </label>
            <br>
            <input type="submit" id="_submit" name="_submit" value="Connexion" class="btn btn-success"/><br>
        </form>
        <div class="linkRegister">
            <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√©</a>
        </div>
    </div>
{% endblock %}