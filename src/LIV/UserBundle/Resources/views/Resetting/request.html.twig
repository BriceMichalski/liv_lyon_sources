{% trans_default_domain 'FOSUserBundle' %}
{% extends "LIVUserBundle::layout.html.twig" %}
{% block description %}Mot de passe oublié{% endblock %}
{% block title %}Liv Lyon - Mot de passe oublié{% endblock %}

{% block fos_user_content %}
    <link type="text/css" rel="stylesheet"  href="{{ asset('css/login.css') }}" media="screen,projection">

    <blockquote>
        Vous allez recevoir un mail pour changer votre mots de passe.
    </blockquote>
    <form id="resetbox" action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
        <div>
            <label for="username">{{ 'resetting.request.username'|trans }}</label>
            <input type="text" id="username" name="username" required="required" />
        </div>
        <div>
            <input type="submit" class="btn btn-success" value="{{ 'resetting.request.submit'|trans }}" />
        </div>
    </form>
{% endblock %}
